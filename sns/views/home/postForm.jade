extends ../layout 

block content
    div.container-fluid
        div.col-md-4.offset-md-4
            h1 #{title}
            form(action='http://localhost:3000/post', method='POST')
                input.form-control(type='text', name='title', placeholder='title')
                input.form-control(type='text', name='content', placeholder='content')
                input.form-control(type='text', name='writer', placeholder='writer')
                input.btn.btn-primary(type='submit')